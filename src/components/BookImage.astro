---
import Image from "astro/components/Image.astro"

const { slug, img, title, width, height, border } = Astro.props
---

<Image transition:name={`img-${slug}`}
	   class={'text-center aspect-square rounded object-contain object-center border border-stone-300 ' + (`${border}` ? '' : 'lg:border-none') + ` md:w-[${width}px]`} 
		 src={`/${img}`}
		 alt={title}
     loading="lazy"
     width={width}
     height={height}
/>