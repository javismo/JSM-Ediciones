---
import Image from "astro/components/Image.astro"

const { slug, img, title } = Astro.props
---

<Image transition:name={`img-${slug}`}
	   class="lg:w-48 sm:w-full aspect-square rounded object-contain object-center border border-stone-300"
		 src={`/${img}`}
		 alt={title}
     loading="lazy"
     width="190"
     height="190"
/>