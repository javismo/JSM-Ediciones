---
import AmazonLogo from "./AmazonLogo.astro";
---

<footer class="w-full bg-[#f5f5f5] border-t border-stone-300 h-14 fixed left-0 bottom-0 flex justify-center px-10 lg:px-0">
  <section class="w-full max-w-screen-lg flex items-center justify-between">
    
    <section class="opacity-85 scale-95 hover:opacity-100 hover:scale-105">
      <a href="https://amazon.com/author/jsmediciones" target="_blank" rel="noopener noreferrer">
        <AmazonLogo />
      </a>
    </section>

    <section class="flex items-center justify-end">
      <h1 class="font-bold text-stone-600">JSM Ediciones | </h1>
      <img src="/jsm-ediciones-logo.svg" class="h-9 pl-1" />
    </section>

  </section>
</footer>
